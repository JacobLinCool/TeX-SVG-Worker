{
    "include": ["src"],
    "exclude": ["dist", "src/_tests", "tsup.config.ts"],
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./lib",
        "declaration": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["@cloudflare/workers-types", "@types/node", "@types/jest"]
    }
}
